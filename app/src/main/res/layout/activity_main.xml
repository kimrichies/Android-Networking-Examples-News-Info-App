<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnViewWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View University Website" />

    <Button
        android:id="@+id/btnFetchNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View Sample News Feed" />

    <Button
        android:id="@+id/btnFetchSoftPowerNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fetch SoftPower News (Web Scraping)" />

    <Button
        android:id="@+id/btnFetchMUSTNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fetch SoftPower News (Web Scraping)" />
</LinearLayout>